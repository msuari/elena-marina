---
import "../styles/global.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Elena & Marina's Wedding Website" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="robots" content="noindex, nofollow">

		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&family=Playfair+Display:wght@400;500;700&display=swap" rel="stylesheet">

		<!-- AOS CSS -->
		<link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />

	</head>
	<body class="bg-stone-50 text-gray-700 font-sans antialiased">

		{/* Header/Navigation */}
		<header class="bg-white shadow-sm sticky top-0 z-50 w-full">
			<nav class="container mx-auto px-6 py-3 flex justify-between items-center">
				{/* Site Title/Logo */}
				<a href="/elena-marina/" class="text-xl font-serif font-medium text-gray-800">Elena & Marina</a>
				
				{/* Navigation Links (Desktop) */}
				<div class="hidden md:flex space-x-6 items-center">
					<a href="/elena-marina" class="text-gray-600 hover:text-gray-900 transition duration-200">Inicio</a>
					<a href="/elena-marina/finca" class="text-gray-600 hover:text-gray-900 transition duration-200">La Finca</a>
					<a href="/elena-marina/accommodation" class="text-gray-600 hover:text-gray-900 transition duration-200">Alojamiento</a>
					<a href="/elena-marina/car-rental" class="text-gray-600 hover:text-gray-900 transition duration-200">Alquiler Coche</a>
					<a href="/elena-marina/recommendations" class="text-gray-600 hover:text-gray-900 transition duration-200">Qué Hacer</a>
					{/* Maybe link to RSVP section on homepage? */}
					<a href="https://forms.gle/1n2fJh6cmFzFEK8q8" class="bg-gray-800 hover:bg-gray-700 text-white text-sm font-semibold py-2 px-4 rounded transition duration-300">Confirmar</a>
				</div>

				{/* Mobile Menu Button */}
				<div class="md:hidden">
					<button id="mobile-menu-button" class="text-gray-800 focus:outline-none">
						<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path></svg>
					</button>
				</div>
			</nav>

			{/* Mobile Menu (Hidden by default) */}
			<div id="mobile-menu" class="md:hidden hidden bg-white border-t border-gray-200">
				<a href="/elena-marina/" class="block px-6 py-3 text-gray-700 hover:bg-gray-100">Inicio</a>
				<a href="/elena-marina/finca" class="block px-6 py-3 text-gray-700 hover:bg-gray-100">La Finca</a>
				<a href="/elena-marina/accommodation" class="block px-6 py-3 text-gray-700 hover:bg-gray-100">Alojamiento</a>
				<a href="/elena-marina/car-rental" class="block px-6 py-3 text-gray-700 hover:bg-gray-100">Alquiler Coche</a>
				<a href="/elena-marina/recommendations" class="block px-6 py-3 text-gray-700 hover:bg-gray-100">Qué Hacer</a>
				<a href="https://forms.gle/1n2fJh6cmFzFEK8q8" class="block px-6 py-3 text-gray-700 hover:bg-gray-100">Confirmar Asistencia</a>
			</div>
		</header>

		<slot />

    {/* Footer */}
    <footer class="bg-stone-100 text-gray-600 py-6 mt-16 md:mt-24 text-sm">
      <div class="container mx-auto px-6 text-center">
        <p>&copy; {new Date().getFullYear()} Elena & Marina. Con todo nuestro cariño.</p>
        {/* You could add other links or info here if needed */}
      </div>
    </footer>

		{/* AOS Script */}
		<script is:inline src="https://unpkg.com/aos@next/dist/aos.js"></script>
		<script is:inline>
			AOS.init({
				duration: 800, // Animation duration in ms
				once: true // Whether animation should happen only once - while scrolling down
			});

			// Mobile Menu Toggle Script
			const menuButton = document.getElementById('mobile-menu-button');
			const mobileMenu = document.getElementById('mobile-menu');
			menuButton.addEventListener('click', () => {
				mobileMenu.classList.toggle('hidden');
			});
		</script>
	</body>
</html>
