              <img src={hotel.imageSrc} alt={hotel.name} class="w-full h-full object-cover" />
              {hotel.minNights && (
                <div class="absolute top-4 right-4 bg-black/60 text-white px-3 py-1 rounded-full text-xs font-medium">
                  {hotel.minNights}
                </div>
              )}
              <div class="absolute bottom-4 right-4 bg-black/60 text-white px-3 py-1 rounded-full text-sm font-medium">
                {hotel.price}
              </div>
            </div>
            <div class="p-6 flex flex-col flex-grow">
              {hotel.discount && (
                <span class="mb-2 bg-emerald-100 text-emerald-800 font-semibold text-xs px-3 py-1 rounded-full shadow-sm">
                  <!--text-xs font-medium px-2.5 py-0.5 rounded-full self-start bg-blue-100 text-blue-800 -->
