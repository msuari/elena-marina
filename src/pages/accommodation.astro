              class="text-gray-400 hover:text-gray-600 text-2xl font-bold leading-none"
            >
              √ó
            </button>
          </div>
          <div id="modalBody" class="text-gray-700"></div>
          <div class="mt-6 flex justify-end">
            <button 
              id="modalCloseBtnBottom"
              class="bg-gray-800 hover:bg-gray-700 text-white font-medium py-2 px-6 rounded-lg transition duration-300 ease-in-out"
            >
              Cerrar
            </button>
          </div>
        </div>
      </div>
    </div>

    <script>
      function openModal(hotelName: string, title: string, content: string) {
        const modalTitle = document.getElementById('modalTitle');
        const modalBody = document.getElementById('modalBody');
        const hotelModal = document.getElementById('hotelModal');
        
        if (modalTitle && modalBody && hotelModal) {
          modalTitle.textContent = title;
          modalBody.innerHTML = content;
          hotelModal.classList.remove('hidden');
          document.body.style.overflow = 'hidden';
        }
      }

      function closeModal() {
        const hotelModal = document.getElementById('hotelModal');
        if (hotelModal) {
          hotelModal.classList.add('hidden');
          document.body.style.overflow = 'auto';
        }
      }

      // Initialize modal functionality
      document.addEventListener('DOMContentLoaded', function() {
        // Add click listeners to modal trigger buttons
        const modalTriggers = document.querySelectorAll('.modal-trigger');
        modalTriggers.forEach(button => {
          button.addEventListener('click', function(this: HTMLElement) {
            const hotelName = this.getAttribute('data-hotel-name') || '';
            const title = this.getAttribute('data-modal-title') || '';
            const content = this.getAttribute('data-modal-content') || '';
            openModal(hotelName, title, content);
          });
        });

        // Add click listeners to modal close buttons
        const modalCloseBtn = document.getElementById('modalCloseBtn');
        const modalCloseBtnBottom = document.getElementById('modalCloseBtnBottom');
        
        if (modalCloseBtn) {
          modalCloseBtn.addEventListener('click', closeModal);
        }
        if (modalCloseBtnBottom) {
          modalCloseBtnBottom.addEventListener('click', closeModal);
        }

        // Close modal when clicking outside
        const hotelModal = document.getElementById('hotelModal');
        if (hotelModal) {
          hotelModal.addEventListener('click', function(e) {
            if (e.target === this) {
              closeModal();
            }
          });
        }

        // Close modal with Escape key
        document.addEventListener('keydown', function(e) {
          if (e.key === 'Escape') {
            closeModal();
          }
        });
      });
    </script>
