---

<Layout title="Accommodation - Elena & Marina's Wedding">
  <main class="bg-white text-gray-700 font-sans antialiased min-h-screen">
    <div class="container mx-auto px-6 py-20 md:py-28">
      <h1 class="text-4xl md:text-5xl font-serif font-medium text-center mb-16 md:mb-20 text-gray-800" data-aos="fade-down">Where to Stay</h1>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10 md:gap-12">
        {hotels.map((hotel, index) => (
          <div class="bg-gray-50 rounded-lg shadow-lg overflow-hidden flex flex-col" data-aos="fade-up" data-aos-delay={index * 100}>
            <div class="h-48 md:h-56 bg-gray-300"> {/* Image placeholder container */}
              <img src={hotel.imageSrc} alt={hotel.name} class="w-full h-full object-cover" />
            </div>
            <div class="p-6 flex flex-col flex-grow">
              <h3 class="text-xl lg:text-2xl font-serif font-medium mb-3 text-gray-800">{hotel.name}</h3>
              <p class="text-gray-600 leading-relaxed mb-4 flex-grow">{hotel.description}</p>
              <div class="text-sm text-gray-500 mt-auto">
                <p class="mb-1">{hotel.address}</p>
                <div class="flex justify-between items-center">
                  <a href={hotel.website} target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:underline font-medium">Website</a>
                  <a href={hotel.locationLink} target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:underline font-medium">View Map</a>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>

      <div class="text-center mt-16 md:mt-20" data-aos="fade-up">
        <a 
          href="/" 
          class="inline-block border-2 border-gray-800 hover:bg-gray-800 hover:text-white text-gray-800 font-semibold py-2 px-8 rounded-lg text-lg tracking-wide transition duration-300 ease-in-out transform hover:scale-105"
        >
          Back to Main Page
        </a>
      </div>
      
    </div>
  </main>
</Layout> 