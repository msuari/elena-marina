              <p class="text-gray-600 leading-relaxed mb-4 flex-grow">{hotel.description}</p>
              <div class="text-sm text-gray-500 mt-auto">
                <p class="mb-1">{hotel.address}</p>
                <div class="flex justify-between items-center gap-2">
                  {hotel.modalInfo ? (
                    <button 
                      data-hotel-name={hotel.name}
                      data-modal-title={hotel.modalInfo.title}
                      data-modal-content={hotel.modalInfo.content}
                      class="modal-trigger flex-1 text-center bg-blue-100 hover:bg-blue-200 text-blue-800 text-sm font-medium py-1.5 px-3 rounded-md transition duration-300 ease-in-out transform hover:scale-105"
